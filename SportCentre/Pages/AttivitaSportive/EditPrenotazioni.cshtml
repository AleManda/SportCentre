@page
@model SportCentre.Pages.AttivitaSportive.EditPrenotazioniModel

@{
    ViewData["Title"] = "EditPrenotazioni";
}

<h1>
    @Model.PrenotazioneVM.sportCentreName
</h1>

<h4>Edit Prenotazione</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PrenotazioneVM.Id" />
            <input type="hidden" asp-for="PrenotazioneVM.sportCentreId" />
            <div class="form-group">
                
                @* <label asp-for="PrenotazioneVM.userName" class="control-label"></label> *@
                <label>User Name</label>
                <select asp-for="PrenotazioneVM.userId" class="form-control" asp-items="ViewBag.userId"></select>
                <span asp-validation-for="PrenotazioneVM.userId" class="text-danger"></span>
            </div>
            <div class="form-group">              
                @* <label asp-for="PrenotazioneVM.attivitaId" class="control-label"></label> *@
                <label>Attività</label>
                <select asp-for="PrenotazioneVM.attivitaId" class="form-control" asp-items="ViewBag.attivitaId"></select>
                <span asp-validation-for="PrenotazioneVM.attivitaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="PrenotazioneVM.Data" class="control-label"></label>
                <input asp-for="PrenotazioneVM.Data" class="form-control" type="date" />
                <span asp-validation-for="PrenotazioneVM.Data" class="text-danger"></span>
            </div>
            <p>         </p>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p> </p>
@if (!string.IsNullOrEmpty(Model.MessaggioConferma))
{
    <div class="alert alert-success">
        @Model.MessaggioConferma
    </div>
}
<hr />
<div>
    <a asp-page="./PrenotazioniIndex" asp-route-sportcentreid="@Model.PrenotazioneVM.sportCentreId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
