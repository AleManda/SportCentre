@page
@model SportCentre.Pages.SportCentres.SportCentresIndexModel
<h2>Sport Centres</h2>
<hr />

<form asp-page="./SportCentresIndex" method="get">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.sportCentres[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sportCentres[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sportCentres[0].Location)
            </th>
            <th></th>
        </tr>
        <tr>
            <th>

                <div class="form-actions no-color">
                    <p>
                        <input type="text" name="searchname" asp-for="CurrentFilterName" />
                    </p>
                </div>

            </th>
            <th>

                <div class="form-actions no-color">
                    <p>
                        <input type="text" name="searchaddress" asp-for="CurrentFilterAddress" />
                    </p>
                </div>

            </th>
            <th>

                <div class="form-actions no-color">
                    <p>
                        <input type="text" name="searchlocation" asp-for="CurrentFilterLocation" />

                    </p>
                </div>

            </th>
            <th>
                <div class="form-actions no-color">
                    <p>
                        <input type="submit" value="Search" class="btn-primary" />
                    </p>
                </div>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.sportCentres)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
                <td>
                    <a asp-page="/AttivitaSportive/PrenotazioniIndex" asp-route-sportcentreid="@item.id">Prenotazioni</a>
                </td>
            <td>
                    <a asp-page="./EditSportCentre" asp-route-id="@item.id">Edit</a> |
                    @*    <a asp-page="./Details" asp-route-id="@item.id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.id">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
</form>
<p>
    <a asp-page="./CreateSportCentre">Create New Sport Centre</a>
</p>




@{
    var prevDisabled = !Model.sportCentres.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.sportCentres.HasNextPage ? "disabled" : "";
}

<a asp-page="./SportCentresIndex"
   asp-route-pageIndex="@(Model.sportCentres.PageIndex - 1)"
   class="btn btn-primary @prevDisabled">
    Previous
</a>

<a asp-page="./SportCentresIndex"
   asp-route-pageIndex="@(Model.sportCentres.PageIndex + 1)" 
   class="btn btn-primary @nextDisabled">
    Next
</a>

<hr />

